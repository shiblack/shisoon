
@using NewLife;
@using NewLife.Web;
@using XCode;
@using XCode.Configuration;
@using System.Web.Mvc;
@using System.Web.Mvc.Ajax;
@using System.Web.Mvc.Html;
@using System.Web.Routing;
@{
    var fact = ViewBag.Factory as IEntityOperate;
    var page = ViewBag.Page as Pager;
    var fields = ViewBag.Fields as List<FieldItem>;
}
<table class="table table-bordered table-hover table-striped table-condensed">
    <thead>
        <tr>
            <th class="text-center hidden-md hidden-sm hidden-xs"><a href="@Html.Raw(page.GetSortUrl("ID"))">编号</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("Number1"))">设备编号</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("SpotEquipmentNumber"))">现场设备编号</a></th>

            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("ConnMode"))">通讯方式</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("TelephoneNumber"))">联系方式</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("CostPackage"))">费用套餐</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("RenewalCycle"))">续费周期</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("ThisRenewalTime"))">本次续费时间</a></th>

            @if (ManageProvider.User.Has(PermissionFlags.Detail, PermissionFlags.Update, PermissionFlags.Delete))
            {
                <th class="text-center">操作</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var entity in Model)
        {
            <tr>
                <td class="text-center hidden-md hidden-sm hidden-xs">@entity.ID</td>
                <td>@entity.Number1</td>
                <td>@entity.SpotEquipmentNumber</td>

                <td>@entity.ConnMode</td>
                <td class="text-center">@entity.TelephoneNumber</td>
                <td class="text-right">@entity.CostPackage</td>
                <td>@entity.RenewalCycle</td>
                <td>@entity.ThisRenewalTime</td>

                @if (ManageProvider.User.Has(PermissionFlags.Detail, PermissionFlags.Update, PermissionFlags.Delete))
                {
                    <td class="text-center">
                        @Html.Partial("_List_Data_Action", (Object)entity)
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
