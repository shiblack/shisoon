
@using NewLife;
@using NewLife.Web;
@using XCode;
@using XCode.Configuration;
@using System.Web.Mvc;
@using System.Web.Mvc.Ajax;
@using System.Web.Mvc.Html;
@using System.Web.Routing;
@{
    var fact = ViewBag.Factory as IEntityOperate;
    var page = ViewBag.Page as Pager;
    var fields = ViewBag.Fields as List<FieldItem>;
}
<table class="table table-bordered table-hover table-striped table-condensed">
    <thead>
        <tr>
            <th class="text-center hidden-md hidden-sm hidden-xs"><a href="@Html.Raw(page.GetSortUrl("ID"))">编号</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("Number1"))">设备编号</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("SpotEquipmentNumber"))">现场设备编号</a></th>

            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("PrecisionGrade"))">精度等级</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("RangeMin"))">量程下限</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("RangeMax"))">量程上限</a></th>


            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("VerificationPeriod"))">检定周期（年）</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("VerificationDay"))">检定日期</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("ExpirationDate"))">有效期限</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("VerificationCertificateNumber"))">鉴定证书编号</a></th>
            <th class="text-center"><a href="@Html.Raw(page.GetSortUrl("VerificationConclusion"))">鉴定结论</a></th>
            @if (ManageProvider.User.Has(PermissionFlags.Detail, PermissionFlags.Update, PermissionFlags.Delete))
            {
                <th class="text-center">操作</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var entity in Model)
        {
            <tr>
                <td class="text-center hidden-md hidden-sm hidden-xs">@entity.ID</td>
                <td>@entity.Number1</td>
                <td>@entity.SpotEquipmentNumber</td>

                <td>@entity.PrecisionGrade</td>
                <td class="text-center">@entity.RangeMin</td>
                <td class="text-right">@entity.RangeMax</td>


                <td>@entity.VerificationPeriod</td>
                <td>@Utility.ToFullString(entity.VerificationDay, "")</td>
                <td>@Utility.ToFullString(entity.ExpirationDate, "")</td>
                <td>@entity.VerificationCertificateNumber</td>
                <td>@entity.VerificationConclusion</td>

                @if (ManageProvider.User.Has(PermissionFlags.Detail, PermissionFlags.Update, PermissionFlags.Delete))
                {
                    <td class="text-center">
                        @Html.Partial("_List_Data_Action", (Object)entity)
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
