        <script src="~/demo/plugins/flot-charts/jquery.flot.resize.min.js"></script>
        <script src="~/demo/plugins/flot-charts/jquery.flot.tooltip.min.js"></script>
        <!--Sparkline [ OPTIONAL ]-->
