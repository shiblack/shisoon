<div class="tab-pane fade" id="Forgot">
    <div class="cls-content-sm panel">
        <div class="panel-body">

            @using (Html.BeginForm("ForgetPassword", "User", new { r = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "cube-login" }))
            {
                <h1 class="h3">Forgot password</h1>
                <p class="pad-btm">Enter your email address to recover your password. </p>
                <form>
                    <div class="form-group">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                    </div>
                    <div class="form-group text-right">
                        <button class="btn btn-danger btn-lg btn-block" type="submit">Reset Password</button>
                    </div>
                </form>
            }
            <div class="pad-top">
                <a href="#Login" class="btn-link text-bold text-main" data-toggle="tab">Back to Login</a>
            </div>
        </div>
    </div>
   </div>