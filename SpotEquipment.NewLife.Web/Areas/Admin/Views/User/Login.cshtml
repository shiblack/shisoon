@using NewLife.Common;
@{
    Layout = null;
    ViewBag.Title = "登录";
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->

    <title>@ViewBag.Title - @SysConfig.Current.DisplayName</title>
    @*<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />*@

    <!-- 基本样式 -->
    @*<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@

    <!--我加入的新样式-->
    <!--Open Sans Font [ OPTIONAL ]-->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <!--Bootstrap Stylesheet [ REQUIRED ]-->
    <link href="~/demo/css/bootstrap.min.css" rel="stylesheet">
    <!--Nifty Stylesheet [ REQUIRED ]-->
    <link href="~/demo/css/nifty.min.css" rel="stylesheet">
    <!--Nifty Premium Icon [ DEMONSTRATION ]-->
    <link href="~/demo/css/demo/nifty-demo-icons.min.css" rel="stylesheet">
    <!--=================================================-->
    <!--Pace - Page Load Progress Par [OPTIONAL]-->
    <link href="~/demo/plugins/pace/pace.min.css" rel="stylesheet">
    <script src="~/demo/plugins/pace/pace.min.js"></script>
    <!--Demo [ DEMONSTRATION ]-->
    <link href="~/demo/css/demo/nifty-demo.min.css" rel="stylesheet">

    <!-- 自定义样式-->
    @*<link href="~/Content/Cube.css" rel="stylesheet" />*@

</head>
<body>
    <div class="cls-container">
        <!-- BACKGROUND IMAGE -->
        <!--===================================================-->
        <div id="bg-overlay"></div>
        <!--登录页-->
        <div class="cls-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="tab-content">
                            @Html.Partial("_Login_Login")
                            @Html.Partial("_Login_Forgot")
                            @Html.Partial("_Login_Register")
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="demo-bg">
            <div id="demo-bg-list">
                <div class="demo-loading"><i class="psi-repeat-2"></i></div>
                <img class="demo-chg-bg bg-trans active" src="~/demo/img/bg-img/thumbs/bg-trns.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="~/demo/img/bg-img/thumbs/bg-img-1.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="~/demo/img/bg-img/thumbs/bg-img-2.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="~/demo/img/bg-img/thumbs/bg-img-3.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="~/demo/img/bg-img/thumbs/bg-img-4.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="~/demo/img/bg-img/thumbs/bg-img-5.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="~/demo/img/bg-img/thumbs/bg-img-6.jpg" alt="Background Image">
                <img class="demo-chg-bg" src="~/demo/img/bg-img/thumbs/bg-img-7.jpg" alt="Background Image">
            </div>
        </div>
    </div>
    <!-- JQuery作为一等公民，页面内部随时可能使用 -->
<script src="~/Content/js/jquery-2.1.3.min.js"></script>
 <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
<script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
<script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->
<!--我加入的新JavaScript-->
<!--jQuery [ REQUIRED ]-->
<script src="~/demo/js/jquery.min.js"></script>
<!--BootstrapJS [ RECOMMENDED ]-->
<script src="~/demo/js/bootstrap.min.js"></script>
<!--NiftyJS [ RECOMMENDED ]-->
<script src="~/demo/js/nifty.min.js"></script>
<!--=================================================-->
<!--Background Image [ DEMONSTRATION ]-->
<script src="~/demo/js/demo/bg-images.js"></script>
@*<script src="~/demo/js/snow.js"></script>*@
</body>
</html>